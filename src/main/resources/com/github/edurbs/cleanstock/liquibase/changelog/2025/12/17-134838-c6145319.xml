<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="CleanStock">
        <addColumn tableName="PERSON">
            <column name="CREDIT_LIMIT" type="DECIMAL(19, 2)"/>
            <column name="NICK_NAME" type="VARCHAR(255)"/>
            <column name="NOTES" type="CLOB"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="CleanStock">
        <addColumn tableName="PERSON">
            <column name="NAME" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="NAME" defaultNullValue="''" tableName="PERSON"/>
    </changeSet>
    <changeSet id="3" author="CleanStock">
        <dropColumn columnName="FIRST_NAME" tableName="PERSON"/>

        <dropColumn columnName="LAST_NAME" tableName="PERSON"/>

        <dropColumn columnName="LEGAL_NAME" tableName="PERSON"/>

        <dropColumn columnName="OPERATION_START_DATE" tableName="PERSON"/>

        <dropColumn columnName="TRADING_NAME" tableName="PERSON"/>
    </changeSet>
</databaseChangeLog>