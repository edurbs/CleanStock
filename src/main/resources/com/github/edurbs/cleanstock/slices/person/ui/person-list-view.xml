<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://personListView.title"
      focusComponent="personsDataGrid">
    <data>
        <collection id="personsDc"
                    class="com.github.edurbs.cleanstock.slices.person.Person">
            <fetchPlan extends="_base"/>
            <loader id="personsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Person e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="personsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="personsDataGrid.createAction"/>
                <button id="editButton" action="personsDataGrid.editAction"/>
                <button id="removeButton" action="personsDataGrid.removeAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="personsDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="personsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="personsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="personType"/>
                <column property="taxId"/>
                <column property="name"/>
                <column property="email"/>
                <column property="nickName"/>
                <column property="birthDate"/>
                <column property="phone"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
