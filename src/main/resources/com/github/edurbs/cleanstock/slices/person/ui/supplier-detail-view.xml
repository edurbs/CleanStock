<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://supplierDetailView.title"
      focusComponent="form">
    <data>
        <instance id="supplierDc"
                  class="com.github.edurbs.cleanstock.slices.person.Supplier">
            <fetchPlan extends="_base"/>
            <loader id="supplierDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="supplierDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <select id="personTypeField" property="personType"/>
            <textField id="taxIdField" property="taxId"/>
            <textField id="nameField" property="name"/>
            <textField id="emailField" property="email"/>
            <textField id="nickNameField" property="nickName"/>
            <datePicker id="birthDateField" property="birthDate"/>
            <textField id="phoneField" property="phone"/>
            <textArea id="notesField" height="9.5em" property="notes"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
