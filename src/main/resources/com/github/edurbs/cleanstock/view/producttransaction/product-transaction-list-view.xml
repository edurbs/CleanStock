<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://productTransactionListView.title"
      focusComponent="productTransactionsDataGrid">
    <data>
        <collection id="productTransactionsDc"
                    class="com.github.edurbs.cleanstock.slices.producttransaction.ProductTransaction">
            <fetchPlan extends="_base"/>
            <loader id="productTransactionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ProductTransaction e]]>
                </query>
            </loader>
        </collection>
        <instance id="productTransactionDc"
                  class="com.github.edurbs.cleanstock.slices.producttransaction.ProductTransaction">
            <fetchPlan extends="_base">
                <property name="items" fetchPlan="_base">
                    <property name="product" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="productTransactionDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <startSlot>
                        <button id="createButton" action="productTransactionsDataGrid.createAction"/>
                        <button id="removeButton" action="productTransactionsDataGrid.removeAction"/>
                    </startSlot>
                    <endSlot>
                        <simplePagination id="pagination" dataLoader="productTransactionsDl"/>
                    </endSlot>
                </hbox>
                <dataGrid id="productTransactionsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="productTransactionsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="createAction" type="list_create"/>
                        <action id="removeAction" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="referenceNumber"/>
                        <column property="shippingCost"/>
                        <column property="notes"/>
                        <column property="transactionStatus"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="productTransactionDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="referenceNumberField" property="referenceNumber"/>
                    <textField id="shippingCostField" property="shippingCost"/>
                    <textArea id="notesField" height="9.5em" property="notes"/>
                    <select id="transactionStatusField" property="transactionStatus"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
